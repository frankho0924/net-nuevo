@model cinco.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2>¿Está seguro que desea eliminar este cliente?</h2>

<div class="card p-3 mb-3">
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Documento:</strong> @Model.Documento</p>
    <p><strong>Teléfono:</strong> @Model.Telefono</p>
    <p><strong>Dirección:</strong> @Model.Direccion</p>
</div>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
