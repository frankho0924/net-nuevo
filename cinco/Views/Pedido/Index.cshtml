@model List<cinco.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h2>Listado de Pedidos</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Crear Pedido</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Cliente.Nombre</td>
                <td>@p.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@p.Estado</td>
                <td>@p.Total.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@p.Id">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
