@model cinco.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>¿Está seguro que desea eliminar este producto?</h2>

<div class="card p-3 mb-3">
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Descripción:</strong> @Model.Descripcion</p>
    <p><strong>Stock:</strong> @Model.Stock</p>
    <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
