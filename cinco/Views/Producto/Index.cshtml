@model List<cinco.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h2>Listado de Productos</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Crear Producto</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Stock</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Nombre</td>
                <td>@p.Descripcion</td>
                <td>@p.Stock</td>
                <td>@p.Precio.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@p.Id">Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@p.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@p.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
