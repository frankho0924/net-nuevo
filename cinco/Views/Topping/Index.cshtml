@model List<cinco.Models.Topping>

@{
    ViewData["Title"] = "Toppings";
}

<h2>Toppings</h2>

<a class="btn btn-primary mb-3" asp-action="Create">
    Crear Topping
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No hay toppings registrados.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Nombre</td>
                    <td>@t.Precio.ToString("C")</td>
                    <td>
                        <a class="btn btn-danger btn-sm"
                           asp-action="Delete"
                           asp-route-id="@t.Id">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
